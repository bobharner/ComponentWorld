<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>Tapestry Component Finder</display-name>
    <context-param>
        <!-- tell Tapestry 5 where to look for pages, components and mixins. -->
        <param-name>tapestry.app-package</param-name>
        <param-value>org.apache.tapestry.finder</param-value>
    </context-param>
    <context-param>
        <!-- controls whether to omit the tapestry "generator" metatag -->
        <param-name>tapestry.omit-generator-meta</param-name>
        <param-value>true</param-value>
    </context-param>

    <filter>
        <filter-name>app</filter-name>
        <filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
    </filter>
	<filter>
		<filter-name>Cayenne Filter</filter-name>
		<filter-class>org.apache.cayenne.conf.WebApplicationContextFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Cayenne Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    <filter-mapping>
        <filter-name>app</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	<resource-ref>
		<res-ref-name>jdbc/finder</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>
      
